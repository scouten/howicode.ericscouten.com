<nav class="breadcrumb has-succeeds-separator" aria-label="breadcrumbs">
  {{#if page.breadcrumbs}}
  <ul>
  {{#if (exists page.attributes.disable-breadcrumbs)}}
  &nbsp;
  {{else}}
  {{#with site.homeUrl}}
    <li><a href="{{{relativize this}}}"><span class="icon is-small"><i class="fas fa-home" aria-hidden="true"></i></span></a>&#8203;</li>
  {{/with}}
    {{#with page.componentVersion}}
    {{#if (and ./title (ne ./title @root.page.breadcrumbs.0.content))}}
    <li><a href="{{{relativize ./url}}}">{{{./title}}}</a></li>
    {{/if}}
    {{/with}}
    {{#each page.breadcrumbs}}
    {{#unless @last}}
    <li>
    {{~#if (and ./url (eq ./urlType 'internal'))~}}
    <a href="{{{relativize ./url}}}">{{{./content}}}</a>
    {{~else~}}
    {{{./content}}}
    {{~/if~}}
    </li>
    {{/unless}}
    {{/each}}
    {{/if}}
  </ul>
  {{/if}}
</nav>
